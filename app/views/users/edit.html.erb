<div class="container-sm mt-3 w-75">
  <h2>User info</h2>
  <% if @user.errors.any? %>
    <h3><%= pluralize(@user.errors.count, "error") %> prohibited this obj from being saved:</h3>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <%= form_with model: @user do |f| %>
  <div class="row ml-1 mr-1">
    <label>Name</label>
  </div>
  <div class="row mb-3 ml-1 mr-1">
    <%= f.text_field :name, autofocus: true, placeholder: "#{current_user.name}", class: "w-100" %>
  </div>
  <div class="row ml-1 mr-1">
    <label>Image</label>
  </div>
  <div class="row mb-3 ml-1 mr-1">
    <%= f.file_field :profile_image, placeholder: "ファイルを選択", accept: "image/*" %>
  </div>
  <div class="row ml-1 mr-1">
    <label>Introduction</label>
  </div>
  <div class="row mb-3 ml-1 mr-1">
    <%= f.text_area :introduction, class: "w-100" %>
  </div>
  <div class="row ml-1 mr-1">
    <%= f.submit "Update User", class: "btn btn-secondary btn-sm" %>
  </div>
  <% end %>
</div>