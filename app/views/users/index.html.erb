<div class="container-fluid mt-3 pl-4 pr-4">
  <div class="row justify-content-around">
    <div class="col-12 col-lg-3 mb-5">
      <%= render 'books/side', user: @user, book: @book %>
    </div>
    <div class="col-10 col-lg-7">
      <h2>Users</h2>
      <table class="table">
        <tr>
          <th>image</th>
          <th>name</th>
        </tr>
        <% @users.each do |user| %>
        <tr>
          <th>
            <%= image_tag user.get_profile_image(80,80) %>
          </th>
          <th>
            <%= user.name %>
          </th>
          <th>
            <%= link_to "Show", user_path(user.id) %>
          </th>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
