<% if flash[:notice] %>
  <p id="notice">
    <%= flash[:notice] %>
  </p>
<% end %>

<%= render 'books/side', user: @user, book: @book %>


<Table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
<% @books.each do |book| %>
  <tr>
    <td>
      <%= link_to user_path(book.user.id) do %>
        <%= image_tag book.user.get_profile_image(100,100) %>
      <% end %>
    </td>
    <td>
      <%= link_to book_path(book.id) do %>
        <%= book.title %>
      <% end %>
    </td>
    <td>
      <%= book.body %>
    </td>
  </tr>
<% end %>
</Table>


