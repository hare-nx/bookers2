<div class="container w-100 mt-3 pl-4 pr-4">
  <div class="row justify-content-around">
    <div class="col-12 col-md-3 mb-5">
      <%= render 'books/side', user: @user, book: @new_book %>
    </div>
    <div class="col-10 col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tr>
          <td>
            <%= link_to user_path(@book.user.id) do %>
              <%= image_tag @book.user.get_profile_image(80,80) %><br>
              <%= @book.user.name %>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(@book) do %>
              <%= @book.title %>
            <% end %>
          </td>
          <td>
            <%= @book.body %>
          </td>
          <% if @book.user==current_user %>
          <td>
            <%= link_to "Edit", edit_book_path(@book), class: "btn btn-success btn-sm" %>
          </td>
          <td>
            <%= link_to "Destroy", book_path(@book), method: :delete, "data_confirm"=>"本当に消しますか？", class: "btn btn-danger btn-sm" %>
          </td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>