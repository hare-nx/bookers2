<%= render 'side', user: @user, book: @book %>

<h3>Books</h3>
<Table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <th>
      <%= link_to user_path(book.user.id) do %>
        <%= image_tag book.user.get_profile_image(100,100) %>
      <% end %>
    </th>
    <th>
      <%= link_to book_path(book.id) do %>
        <%= book.title %>
      <% end %>
    </th>
    <th><%= book.body %></th>
  </tr>
  <% end %>
</Table>