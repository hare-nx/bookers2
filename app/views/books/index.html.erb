<div class="container w-100 mt-3 pl-4 pr-4">
 <% if @book.errors.any? %>
  <h3 class="ml-5"><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h3>
   <ul class="ml-5">
     <% @book.errors.full_messages.each do |message| %>
       <li><%=  message %></li>
     <% end %>
   </ul>
 <% end %>
  <div class="row justify-content-around">
    <div class="col-12 col-md-3 mb-5">
      <%= render 'side', user: @user, book: @book %>
    </div>
    <div class="col-10 col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover">
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <% @books.each do |book| %>
        <tr>
          <th>
            <%= link_to user_path(book.user.id) do %>
              <%= image_tag book.user.get_profile_image(80,80) %>
            <% end %>
          </th>
          <th>
            <%= link_to book_path(book.id) do %>
              <%= book.title %>
            <% end %>
          </th>
          <th><%= book.body %></th>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>